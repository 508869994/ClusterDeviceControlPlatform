<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<fx:root xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
         minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0"
         type="BorderPane" xmlns="http://javafx.com/javafx/8.0.141">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="设置  ">
                    <items>
                        <MenuItem fx:id="menuItemConn" mnemonicParsing="false"
                                  onAction="#onActionMenuItemConn" text="连接"/>
                        <MenuItem fx:id="menuItemSend" disable="true" mnemonicParsing="false"
                                  onAction="#onActionMenuItemSend" text="发送状态"/>
                        <MenuItem fx:id="menuItemRandomSend" mnemonicParsing="false"
                                  onAction="#onActionMenuItemRandomSend" text="随机状态"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="帮助  ">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onActionMenuItemAbout"
                                  text="关于"/>
                    </items>
                </Menu>
            </menus>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </MenuBar>
    </top>
    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <SplitPane dividerPositions="0.13879598662207357" prefHeight="368.0"
                           prefWidth="600.0" AnchorPane.bottomAnchor="0.0"
                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                           AnchorPane.topAnchor="0.0">
                    <items>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0"
                                    prefWidth="100.0">
                            <children>
                                <ListView fx:id="deviceGroupList" prefHeight="398.0"
                                          prefWidth="174.0" AnchorPane.bottomAnchor="0.0"
                                          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                          AnchorPane.topAnchor="0.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0"
                                    prefWidth="100.0">
                            <children>
                                <FlowPane fx:id="deviceFlowPane" prefHeight="366.0"
                                          prefWidth="588.0" rowValignment="TOP"
                                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"/>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </children>
        </AnchorPane>
    </center>
    <bottom>
        <AnchorPane prefHeight="0.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefWidth="300.0" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="302.0"
                      AnchorPane.topAnchor="0.0">
                    <children>
                        <Label text="设备组号: ">
                            <HBox.margin>
                                <Insets left="5.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="labelCurrentGroupId" minWidth="50.0" text="未选中"/>
                        <Label text="连接状态: ">
                            <HBox.margin>
                                <Insets left="30.0"/>
                            </HBox.margin>
                        </Label>
                        <Label fx:id="labelConnStatus" text="未连接"/>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" layoutX="340.0" layoutY="-36.0" prefHeight="30.0"
                      prefWidth="260.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="340.0"
                      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Label text="收到帧数: "/>
                        <Label fx:id="labelRecCount" minWidth="50.0" text="0">
                            <HBox.margin>
                                <Insets right="5.0"/>
                            </HBox.margin>
                        </Label>
                        <Button fx:id="btnCleanRecCount" mnemonicParsing="false"
                                onAction="#onActionBtnCleanRecCount" text="清空计数">
                            <HBox.margin>
                                <Insets bottom="2.0" right="2.0" top="2.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </AnchorPane>
    </bottom>
</fx:root>
